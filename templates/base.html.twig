<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>
        {{ 'betting'|trans }}
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
          name='viewport'/>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet"/>
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="{{ asset('build/css/app.css') }}" rel="stylesheet"/>
    {% block stylesheets %}{% endblock %}
</head>
<body class="">
<div class="wrapper ">
    <div class="sidebar" data-color="white" data-active-color="danger">

        <div class="logo text-center">
            <img src="{{ asset('build/images/wm2018.8847ac5b.png') }}" width="150" class="" alt="">
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="
                {% if app.request.get('_route') == 'game_bet_list' or app.request.get('_route') == 'all_upcomming_games' %}
                active
                {% endif %}
                ">
                    <a data-toggle="collapse" href="#betting">
                        <i class="fa fa-futbol"></i>
                        <p>
                            {{ 'sidebar.bet'|trans }}
                            <b class="caret"></b>
                        </p>
                    </a>
                    <div class="
                    {% if app.request.get('_route') == 'game_bet_list' or app.request.get('_route') == 'all_upcomming_games' %}
                        in collapse show
                {% else %}
                        collapse
                {% endif %}" id="betting" style="">
                        <ul class="nav">
                            <li class="{{ app.request.get('_route') == 'game_bet_list'  ? 'active' }}">
                                <a href="{{ path('game_bet_list') }}">
                                    <span class="sidebar-mini">&nbsp;</span>
                                    <span class="sidebar-normal">{{ 'sidebar.dashboard'|trans }}</span>
                                </a>
                            </li>
                            <li class="{{ app.request.get('_route') == 'all_upcomming_games'  ? 'active' }}">
                                <a href="{{ path('all_upcomming_games') }}">
                                    <span class="sidebar-mini">&nbsp;</span>
                                    <span class="sidebar-normal">{{ 'sidebar.future-games'|trans }}</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="
                    {% if app.request.get('_route') == 'game_rating_users' or app.request.get('_route') == 'all_past_games' %}
                active
                {% endif %}
                ">
                    <a data-toggle="collapse" href="#data">
                        <i class="nc-icon nc-trophy"></i>
                        <p>
                            {{ 'sidebar.scores'|trans }}
                            <b class="caret"></b>
                        </p>
                    </a>
                    <div class="
                    {% if app.request.get('_route') == 'game_rating_users' or app.request.get('_route') == 'all_past_games' %}
                        in collapse show
                    {% else %}
                        collapse
                    {% endif %}
                    collapse" id="data" aria-expanded="true" style="">
                        <ul class="nav">
                            <li class="{{ app.request.get('_route') == 'game_rating_users'  ? 'active' }}">
                                <a href="{{ path('game_rating_users') }}">
                                    <span class="sidebar-mini">&nbsp;</span>
                                    <span class="sidebar-normal">{{ 'sidebar.ranking'|trans }}</span>
                                </a>
                            </li>
                            <li class="{{ app.request.get('_route') == 'all_past_games' ? 'active' }}">
                                <a href="{{ path('all_past_games') }}">
                                    <span class="sidebar-mini">&nbsp;</span>
                                    <span class="sidebar-normal">{{ 'sidebar.past-games'|trans }}</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-panel">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <div class="navbar-toggle">
                        <button type="button" class="navbar-toggler">
                            <span class="navbar-toggler-bar bar1"></span>
                            <span class="navbar-toggler-bar bar2"></span>
                            <span class="navbar-toggler-bar bar3"></span>
                        </button>
                    </div>
                    <a class="navbar-brand" href="#pablo">Dashboard</a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
                        aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navigation">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link btn-rotate" href="{{ path('logout') }}">

                                <i class="nc-icon nc-badge"></i>
                                <p>
                                    {{ 'dashboard.logout'|trans }}
                                </p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="content">
            {% block body %}

            {% endblock %}
            <footer class="footer footer-black  footer-white ">
                <div class="container-fluid">
                    <div class="row">
                        <div class="credits ml-auto">
              <span class="copyright">
                 made with <i class="fa fa-heart heart"></i> by <a
                          href="https://github.com/football-betting/symfony4/graphs/contributors">football-betting</a>
              </span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="{{ asset('build/js/app.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
